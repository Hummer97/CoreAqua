<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="550dp"
    android:padding="12dp">

        <TextView
            android:id="@+id/textView26"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/amaranth"
            android:text="Add Address"
            android:textColor="@color/blue"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/add_address_cancel_btn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/add_address_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/border_bg"
            android:backgroundTint="@color/sky_blue"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView26" />

        <EditText
            android:id="@+id/add_address_mail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/border_bg"
            android:backgroundTint="@color/sky_blue"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            app:layout_constraintEnd_toEndOf="@+id/add_address_name"
            app:layout_constraintStart_toStartOf="@+id/add_address_name"
            app:layout_constraintTop_toBottomOf="@+id/add_address_name" />

        <EditText
            android:id="@+id/add_address_mobile_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/border_bg"
            android:backgroundTint="@color/sky_blue"
            android:ems="10"
            android:hint="Mobile No"
            android:inputType="textPersonName"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            app:layout_constraintEnd_toEndOf="@+id/add_address_mail"
            app:layout_constraintStart_toStartOf="@+id/add_address_mail"
            app:layout_constraintTop_toBottomOf="@+id/add_address_mail" />

        <EditText
            android:id="@+id/add_address_address"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/border_bg"
            android:backgroundTint="@color/sky_blue"
            android:ems="10"
            android:gravity="start"
            android:hint="Address"
            android:inputType="textPersonName"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            app:layout_constraintEnd_toEndOf="@+id/add_address_mobile_no"
            app:layout_constraintStart_toStartOf="@+id/add_address_mobile_no"
            app:layout_constraintTop_toBottomOf="@+id/add_address_mobile_no" />

        <EditText
            android:id="@+id/add_address_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/border_bg"
            android:backgroundTint="@color/sky_blue"
            android:ems="10"
            android:hint="city"
            android:inputType="textPersonName"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            app:layout_constraintEnd_toEndOf="@+id/add_address_address"
            app:layout_constraintStart_toStartOf="@+id/add_address_address"
            app:layout_constraintTop_toBottomOf="@+id/add_address_address" />

        <EditText
            android:id="@+id/add_address_state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/border_bg"
            android:backgroundTint="@color/sky_blue"
            android:ems="10"
            android:hint="state"
            android:inputType="textPersonName"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            app:layout_constraintEnd_toEndOf="@+id/add_address_city"
            app:layout_constraintStart_toStartOf="@+id/add_address_city"
            app:layout_constraintTop_toBottomOf="@+id/add_address_city" />

        <EditText
            android:id="@+id/add_address_pin_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/border_bg"
            android:backgroundTint="@color/sky_blue"
            android:ems="10"
            android:hint="Pin Code"
            android:inputType="textPersonName"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            app:layout_constraintEnd_toEndOf="@+id/add_address_state"
            app:layout_constraintStart_toStartOf="@+id/add_address_state"
            app:layout_constraintTop_toBottomOf="@+id/add_address_state" />

        <Button
            android:id="@+id/add_address_save_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Save Address"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/add_address_pin_code"
            app:layout_constraintTop_toBottomOf="@+id/add_address_pin_code" />

        <ImageView
            android:id="@+id/add_address_cancel_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView26"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView26"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_cancel_24" />

        <Button
            android:id="@+id/add_address_update_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Update Address"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/add_address_pin_code"
            app:layout_constraintStart_toStartOf="@+id/add_address_pin_code"
            app:layout_constraintTop_toBottomOf="@+id/add_address_pin_code" />
</androidx.constraintlayout.widget.ConstraintLayout>